{% extends "base.html.twig" %}
{% block title %}
  User
{% endblock %}
{% block stylesheets %}
  <link rel="stylesheet" type="text/css" href="../../css/style.css" /> 
{% endblock %}


{% block body %}
  <div id="container">
    <div id="header">
	  <div class="div1">
	    <img src="../../img/logo.svg" alt="arca solutions"/>
	  </div>
	</div>
	<div id="content">
      <h1>User</h1>
      <div class="detalhes">
	    <h3>Business 
		  <a class="btn" href="{{ path('user_new') }}"><span>Add User</span></a>
		</h3>
	  </div>	
      <div class="detalhes">
        <div id="resultados">
          <table class="table">
            <thead>
              <tr>
                <th>Id</th>
                <th>Usuario</th>
                <th>Senha</th>
                <th>actions</th>
              </tr>
            </thead>
            <tbody>
            {% for user in users %}
              <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.usuario }}</td>
                <td>{{ user.senha }}</td>
                <td>
                  <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn">edit</a>
                </td>
             </tr>
            {% else %}
              <tr>
                <td colspan="4">no records found</td>
              </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>  
  </div>  
{% endblock %}
